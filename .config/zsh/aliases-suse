### Suse/OpenSuse/Gecko commands ###
alias up='sudo zypper up'
alias update='up'
alias dup='sudo zypper dup'
alias dist-upgrade='dup'
alias in='sudo zypper in'
alias ins='in'
alias install='in'
alias se='zypper se'
alias search='se'
alias ar='sudo zypper ar'
alias addrepo='ar'
alias rr='sudo zypper rr'
alias rmrepo='rr'
alias ref=sudo zypper refresh'
alias refresh=r'ef'
alias lr='zypper lr'
alias rm='sudo zypper rm'
